{
  "name": "simple-node-website",
  "version": "0.1.0",
  "description": "A simple website built with Node, Express and Pug",
  "main": "server.js",
  "scripts": {
    "test": "karma start --single-run --browsers ChromeHeadless karma.conf.js && standard --fix",
    "generate-docs": "node_modules/.bin/jsdoc --configure .jsdoc.json --verbose"
  },
  "author": "Ayo Isaiah",
  "license": "MIT",
  "dependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.13.0",
    "express": "^4.16.3",
    "jsdoc": "^3.5.5",
    "mocha": "^6.1.4",
    "testcafe": "^1.2.0"
  },
  "devDependencies": {
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "pm2": "^2.10.3",
    "standard": "^12.0.1",
    "toast-jsdoc": "^1.0.2"
  },
  "standard": {
    "env": [
      "mocha",
      "chai",
      "jest"
    ],
    "globals": [
      "CoreHello",
      "HTMLElement",
      "Carousel",
      "RippleButton"
    ],
    "ignore": [
      "out",
      "node_modules/*",
      "public/scripts/*"
    ]
  }
}
